# ============================================================
# GPU Market Service - Environment Variables
# ============================================================
# Copy this file to .env and fill in your values
# Never commit .env to git!

# ============================================================
# Environment
# ============================================================
ENVIRONMENT=development
# Options: development, staging, production

# ============================================================
# Database
# ============================================================
# SQLite (default for development)
DATABASE_URL=sqlite:///./gpu.db

# PostgreSQL (production or advanced development)
# DATABASE_URL=postgresql://gpu_user:secure_password@localhost:5432/gpu_market
# DATABASE_URL=postgresql://gpu_user:secure_password@postgres:5432/gpu_market  # Docker

# üîí SECURITY: Use DATABASE_URL environment variable, not hardcoded values!
DB_USER=gpu_user
DB_PASSWORD=secure_postgres_password_here_min_16_chars

# ============================================================
# API Configuration
# ============================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
# Set to false in production

# ============================================================
# Security - –ö–†–ò–¢–ò–ß–ù–û –ó–ê PRODUCTION!
# ============================================================

# üî¥ –ó–ê–î–™–õ–ñ–ò–¢–ï–õ–ù–û: –ì–µ–Ω–µ—Ä–∏—Ä–∞–π —Å–∏–ª–µ–Ω SECRET_KEY!
# –ö–æ–º–∞–Ω–¥–∞: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-THIS-TO-RANDOM-SECRET-IN-PRODUCTION

# üî¥ CORS Origins (comma-separated)
# DEVELOPMENT: localhost –µ OK
# PRODUCTION: –ó–ê–î–™–õ–ñ–ò–¢–ï–õ–ù–û —Å–º–µ–Ω–∏ –∫—ä–º –∫–æ–Ω–∫—Ä–µ—Ç–Ω–∏—è —Ç–∏ –¥–æ–º–µ–π–Ω!
#   –ü—Ä–∏–º–µ—Ä–∏: https://yourdomain.com,https://www.yourdomain.com
#   –ù–ò–ö–û–ì–ê –Ω–µ –∏–∑–ø–æ–ª–∑–≤–∞–π "*" –≤ production!
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000

# ============================================================
# Scraper Configuration
# ============================================================
SCRAPER_MAX_PAGES=3
SCRAPER_USE_TOR=true
SCRAPER_TIMEOUT=30

# Rate Limiting
SCRAPER_RATE_LIMIT_REQUESTS_PER_MINUTE=10
SCRAPER_RATE_LIMIT_DELAY_BETWEEN_PAGES=5
SCRAPER_RATE_LIMIT_MAX_RETRIES=3
SCRAPER_RATE_LIMIT_RETRY_DELAY=10

# TOR Proxy
SCRAPER_TOR_PROXY_HTTP=socks5h://127.0.0.1:9050
SCRAPER_TOR_PROXY_HTTPS=socks5h://127.0.0.1:9050

# ============================================================
# Logging
# ============================================================
LOGGING_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# üîí PRODUCTION: Set to 'json' for structured logging in production
# DEVELOPMENT: Use 'text' for colored console output
LOG_FORMAT=text

LOGGING_FILE=logs/gpu_service.log
LOGGING_MAX_BYTES=10485760
# 10MB

LOGGING_BACKUP_COUNT=5
LOGGING_CONSOLE_OUTPUT=true

# ============================================================
# Redis (Optional - for caching)
# ============================================================
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# üîí SECURITY: Generate strong password for production!
# Command: python -c "import secrets; print(secrets.token_urlsafe(24))"
REDIS_PASSWORD=
REDIS_CACHE_TTL=3600
# 1 hour in seconds

# ============================================================
# Celery (Optional - for background tasks)
# ============================================================
# üîí SECURITY: Update with REDIS_PASSWORD in production
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
# For production with password: redis://:password@redis:6379/0

# ============================================================
# Monitoring (Optional)
# ============================================================
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# ============================================================
# Sentry Error Tracking (Recommended for Production)
# ============================================================
# Get your DSN from: https://sentry.io/settings/projects/
# Example: https://examplePublicKey@o0.ingest.sentry.io/0
SENTRY_DSN=

# Environment tag in Sentry (development, staging, production)
SENTRY_ENVIRONMENT=development

# Release version (git commit hash, version tag, etc.)
# Auto-detected from git if not set, or use: git rev-parse --short HEAD
RELEASE=

# ============================================================
# Email Notifications (Optional)
# ============================================================
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM_ADDRESS=noreply@gpumarket.bg

# ============================================================
# Scheduled Jobs
# ============================================================
SCHEDULE_SCRAPE_CRON=0 */6 * * *
# Every 6 hours (cron format)

SCHEDULE_RUN_ON_STARTUP=true
# Run scraping immediately on startup

# ============================================================
# Feature Flags
# ============================================================
FEATURE_USER_ACCOUNTS=false
FEATURE_PRICE_ALERTS=false
FEATURE_MULTI_SOURCE_SCRAPING=false

# ============================================================
# External APIs (Optional)
# ============================================================
# GPU Benchmark API (if using external source)
BENCHMARK_API_URL=
BENCHMARK_API_KEY=

# ============================================================
# Development Tools
# ============================================================
# Hot reload in development
WATCHFILES_FORCE_POLLING=false

# Debug mode (–ù–ò–ö–û–ì–ê true –≤ production!)
DEBUG=false

